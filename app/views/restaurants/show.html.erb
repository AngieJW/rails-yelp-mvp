<div class="container">
<h1>Restaurant</h1>
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

   <p>
    <strong>Reviews:</strong>
    <u class="list-group">
    <% @restaurant.reviews.each do |review|%>
   <li class="list-group-item"> <%= review.rating %>
   <br>
    <%= review.content %></li>
    <% end %></u>
  </p>

  <%= link_to "Add a review",  new_restaurant_review_path(@restaurant), class: "btn btn-info"%>
<br>
<br>
</div>
<%= link_to "See all restaurants", restaurants_path, class: "btn btn-primary" %>
</div>
